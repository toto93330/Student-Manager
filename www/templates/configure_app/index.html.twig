{% extends 'base.html.twig' %}

{% block title %}Hello ConfigureAppController!
{% endblock %}

{% block content %}
	<section class="mt-5">
		<div class="section__content section__content--p30">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-xl-12">
						<!-- USER DATA-->
						<div class="user-data m-b-40">
							<h3 class="title-3 m-b-30">
