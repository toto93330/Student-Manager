{% extends 'base.html.twig' %}

{% block title %}Hello NotificationsController!
{% endblock %}

{% block content %}
	<section class="mt-5">
		<div class="section__content section__content--p30">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-xl-12">
						<!-- CATEGORY MANAGER -->
						<div class="user-data">
							<h3 class="title-3 m-b-30">
								<i class="fas fa-bell"></i>Notifications Manager</h3>
							<div class="table-responsive table-data">
								<table class="table">
									<thead>
										<tr>
											<td>Notifications</td>
										</tr>
									</thead>
									{% for notif in notification|slice(0, 10) %}
										<span id="ajaxcategory">
											<tr>
												<td>
													<p>{{notif.message}}</p>
												</td>
											</tr>

										</span>

									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
