{% extends 'base.html.twig' %}

{% block title %}Hello CursusManagerController!
{% endblock %}

{% block content %}
	<section class="mt-5">
		<div class="section__content section__content--p30">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-xl-12">
						<!-- CATEGORY MANAGER -->
						<div class="user-data m-b-40">
							<h3 class="title-3 m-b-30">
								<i class="fas fa-chalkboard"></i>Search Student</h3>
							<div class="table-responsive table-data">
								<table class="table">
									<thead>
										<tr>
											<td>Firstname</td>
											<td>Lastname</td>
											<td>Email</td>
											<td>Progress</td>
											<td>Path</td>
											<td>Project</td>
											<td>Last Appointment</td>
											<td>Next Appointment</td>
										</tr>
									</thead>
									<tbody>
										{% for data in datas %}
											<tr>
												<td>
													<p>{{data.firstname}}</p>
												</td>
												<td>
													<p>{{data.lastname}}</p>
												</td>
												<td>
													<p>{{data.email}}</p>
												</td>
												<td>
													<p>{{data.studentProgress}}%</p>
												</td>
												<td>
													<span class="role" style="background-color: {{data.path.color}};">{{data.path.slug}}</span>
												</td>
												<td>
													<p>{{data.project.name}}</p>
												</td>
												<td>
													<p>{{data.lastAppointment|date("d/m/Y H:i:s")}}</p>
												</td>
												<td>
													<p>{{data.nextAppointment|date("d/m/Y  H:i:s")}}</p>
												</td>
												<td>
													<div class="table-data-feature">
														<a href="/sendmail">
															<button class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Send Mail">
																<i class="zmdi zmdi-mail-send"></i>
															</button>
														</a>
														<a href="/students/edit/{{data.id}}">
															<button class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit Student">
																<i class="zmdi zmdi-edit"></i>
															</button>
														</a>
														<a href="/students/remove/{{data.id}}">
															<button class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">
																<i class="zmdi zmdi-delete"></i>
															</button>
														</a>
													</div>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
						<!-- END CATEGORY MANAGER -->
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
