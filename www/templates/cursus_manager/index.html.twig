						class="col-xl-12">
						<!-- CATEGORY MANAGER -->
						<div class="user-data">
							<h3 class="title-3 m-b-30">
								<i class="fas fa-chalkboard"></i>Category Manager</h3>
							<div class="table-responsive table-data">
								<table class="table">
									<thead>
										<tr>
											<td>name</td>
											<td>slug</td>
											<td>color</td>
											<td>Previous</td>
										</tr>
									</thead>
									<tbody id="ajaxcategory">

										{% for category in categorys %}
