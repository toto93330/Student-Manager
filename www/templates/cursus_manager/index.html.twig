												<td>
													<p>{{category.name}}</p>
												</td>
												<td>
													<p>{{category.slug}}</p>
												</td>
												<td>
													<p>{{category.color}}</p>
												</td>
												<td>
													<span class="role" style="background-color: {{category.color}};">{{category.slug}}</span>
												</td>
												<td>
													<div class="table-data-feature">
														<a href="/cursus/edit/category/{{category.id}}">
															<button class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit Category">
																<i class="zmdi zmdi-edit"></i>
															</button>
														</a>
														<a href="/cursus/remove/category/{{category.id}}">
															<button class="item ml-1" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove Category">
																<i class="zmdi zmdi-delete"></i>
															</button>
														</a>
